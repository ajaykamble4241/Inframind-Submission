<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dash"
    android:background="@drawable/custom_text">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Healthcare Dashboard"
            android:textStyle="italic|bold"
            android:textSize="50sp"
            android:textColor="#151515"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:columnCount="2"
            android:rowCount="3">


            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="143dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="115dp"
                        android:layout_height="87dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:srcCompat="@drawable/profile" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_column="0"
                        android:layout_marginLeft="20dp"
                        android:layout_row="1"
                        android:text="Profile"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="112dp"
                        android:layout_height="103dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:srcCompat="@drawable/history" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_column="0"
                        android:layout_marginLeft="20dp"
                        android:layout_row="1"
                        android:text="Health Results"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp" />
                </LinearLayout>









            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="127dp"
                        android:layout_height="82dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:srcCompat="@drawable/health" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_column="0"
                        android:layout_marginLeft="20dp"
                        android:layout_row="1"
                        android:text="Health Parameter"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/c4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="127dp"
                        android:layout_height="82dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:srcCompat="@drawable/pills" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_column="0"
                        android:layout_marginLeft="20dp"
                        android:layout_row="1"
                        android:text="Stress Diagnosis"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/c5"
                android:layout_width="133dp"
                android:layout_height="126dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="119dp"
                        android:layout_height="69dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:srcCompat="@drawable/rem" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="131dp"
                        android:layout_height="47dp"
                        android:layout_centerHorizontal="true"
                        android:layout_column="0"
                        android:layout_marginLeft="20dp"
                        android:layout_row="1"
                        android:text="Medication Remainder"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/c6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/imageVie"
                        android:layout_width="127dp"
                        android:layout_height="82dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:srcCompat="@drawable/logout" />

                    <TextView
                        android:id="@+id/textVie"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_column="0"
                        android:layout_marginLeft="20dp"
                        android:layout_row="1"
                        android:text="Logout"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>




        </GridLayout>

    </LinearLayout>

</RelativeLayout>